<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width= "match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="Package id"
        android:ems="10"
        android:id="@+id/editText1" />

    <EditText
        android:layout_width= "match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Package Name"
        android:ems="10"
        android:id="@+id/editText2" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width= "100dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:layout_gravity="top"
            android:text="Select Service"
            android:ems="10"
            android:id="@+id/editText9"
            />

        <Spinner
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/spinner5"
            android:layout_gravity="center_horizontal"
            android:entries="@array/service_list_array"
            android:prompt="@string/service_list_string"/>


    <Spinner
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/spinner2"
        android:layout_gravity="center_horizontal"
        android:entries="@array/price_type_array"
        android:prompt="@string/price_type_string"/>

    <TextView
        android:layout_width= "50dp"
        android:layout_height="50dp"
        android:inputType="text"
        android:text="Price"
        android:layout_gravity="center"
        android:ems="10"
        android:id="@+id/editText5"
        />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton"
            android:background="@drawable/add_icon" />

    </LinearLayout>



<Button
    android:layout_width="137dp"
    android:layout_height="wrap_content"
    android:text="Add Package"
    android:id="@+id/button"
    android:layout_gravity="right" />

</LinearLayout>
